{
  "name": "tmai-server",
  "version": "0.0.2",
  "description": "Backend server for tmai",
  "author": "",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "clean": "docker-compose -f docker-compose.yml kill && docker-compose -f docker-compose.yml rm -f",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "NODE_ENV=development MONGODB_URL=mongodb://tmai:password@localhost:27017/tmai ts-mocha -p tsconfig.json test/**/*.spec.ts",
    "test:local": "yarn test:pre && yarn test && yarn clean",
    "test:pre": "yarn clean && docker-compose -f docker-compose.yml up -d --build mongo && sleep 10"
  },
  "dependencies": {
    "@nestjs/common": "^8.0.0",
    "@nestjs/core": "^8.0.0",
    "@nestjs/mongoose": "^9.0.2",
    "@nestjs/passport": "^8.1.0",
    "@nestjs/platform-express": "^8.0.0",
    "@nestjs/swagger": "^5.1.5",
    "@nestjs/terminus": "^8.0.4",
    "@nestjs/throttler": "^2.0.0",
    "@types/multer": "^1.4.7",
    "helmet": "^5.0.1",
    "joi": "^17.5.0",
    "joiful": "^3.0.2",
    "jwks-rsa": "^2.0.5",
    "mongoose": "^6.1.7",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.2.0",
    "swagger-ui-express": "^4.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^8.0.0",
    "@nestjs/schematics": "^8.0.0",
    "@nestjs/testing": "^8.0.0",
    "@types/chai": "^4.3.0",
    "@types/chai-as-promised": "^7.1.4",
    "@types/express": "^4.17.13",
    "@types/mocha": "^9.1.0",
    "@types/node": "^16.0.0",
    "@types/passport-jwt": "^3.0.6",
    "@types/sinon": "^10.0.8",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "chai": "^4.3.4",
    "chai-as-promised": "^7.1.1",
    "chai-exclude": "^2.1.0",
    "eslint": "^8.0.1",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-no-only-tests": "^2.6.0",
    "eslint-plugin-prettier": "^4.0.0",
    "mocha": "^9.1.4",
    "nock": "^13.2.2",
    "prettier": "^2.3.2",
    "sinon": "^12.0.1",
    "source-map-support": "^0.5.20",
    "supertest": "^6.2.2",
    "ts-loader": "^9.2.3",
    "ts-mocha": "^9.0.2",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typescript": "^4.5.5"
  }
}
